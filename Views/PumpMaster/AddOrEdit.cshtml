@model Trans9.Models.PumpMaster

@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.pumpId" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="pumpId" />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="pumpName" class="control-label"></label>
                        <input asp-for="pumpName" class="form-control" />
                        <span asp-validation-for="pumpName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="location" class="control-label"></label>
                        <input asp-for="location" class="form-control" />
                        <span asp-validation-for="location" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="rate" class="control-label"></label>
                        <input asp-for="rate" class="form-control" />
                        <span asp-validation-for="rate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <input type="hidden" asp-for="createdBy" />
                <input type="hidden" asp-for="status" />
                <input type="hidden" asp-for="createdDate" />
                <input type="hidden" asp-for="updatedBy" />
                <input type="hidden" asp-for="updatedDate" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

