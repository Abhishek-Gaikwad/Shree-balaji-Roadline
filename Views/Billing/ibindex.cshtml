        $(function () {
            $("#report-table").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
            }).buttons().container().appendTo('#report-table_wrapper .col-md-6:eq(0)');
        });
    </script>*@
    <script src="../../js/app.js" type="text/javascript"></script>
}