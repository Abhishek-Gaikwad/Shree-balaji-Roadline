@model IEnumerable<Trans9.Models.Driver>
@section Styles{
    <!-- Select2 -->
    <link rel="stylesheet" href="../../plugins/select2/css/select2.min.css">
    <link href="../../dist/css/lightbox.min.css" rel="stylesheet" />
    <style>
        .table {
            font-size: 11px;
        }

        .btn-sm {
            padding: .25rem .5rem;
            font-size: .875rem;
            line-height: 1.2;
            border-radius: 0.2rem;
        }
    </style>
    <style>
        /* Modal styles */
        .modal-camera {
            display: none;
            position: fixed;
            z-index: 1;
            padding-top: 100px;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.9);
        }

        .modal-content-camera {
            margin: auto;
            display: block;
            width: 40%;
            max-width: 300px;
            background-color: #fefefe;
            padding: 9px;
            border-radius: 5px;
        }

        /* Camera preview */
        #video {
            width: 100%;
            height: auto;
        }

        /* Captured image style */
        #capturedImg {
            display: none;
            width: 100%;
            max-width: 100%;
            margin-top: 10px;
        }

        /* Adjust button layout */
        .button-container {
            text-align: center;
            padding-top:7px
        }

        .btn-group {
            display: inline-block;
        }

        .btn-group > .btn {
            min-width:123px;
        }
    </style>
}
<div class="row">
    <div class="col-md-9">
        <h4> @ViewBag.PageTitle</h4>
    </div>
    <div class="col-md-3 p-2 text-right">
        <a onclick="showInPopup('@Url.Action("AddOrEdit","Driver",null,Context.Request.Scheme)', 'New Driver')" class="btn btn-success btn-sm"><span class="fa fa-plus"></span> Add New Driver</a>
    </div>
</div>
<div id="view-all-transaction">
    @await Html.PartialAsync("_ViewAllDrivers", Model)
</div>


@section Scripts {
    <!-- Select2 -->
    <script src="../../plugins/select2/js/select2.min.js"></script>
    <script src="../../js/app.js"></script>
    <script src="../../js/site.js"></script>
    <script src="../../dist/js/lightbox.min.js"></script>
    <script src="../../js/camera.js"></script>
}