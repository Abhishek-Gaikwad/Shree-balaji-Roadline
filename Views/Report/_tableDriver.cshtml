@model IEnumerable<Trans9.Models.Driver>
<div class="card">
    <div class="table-content">
        <div class="card-body table-responsive p-2" style="height: 450px;">
            <table class="table" id="report-table">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.driverName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.mobileNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dlNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.aadharNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.status)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        int n = 1;
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(n++)</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.driverName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.mobileNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.dlNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.aadharNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>