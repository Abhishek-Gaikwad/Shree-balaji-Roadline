@model Trans9.Models.ReportModel<BillingReport>
@section Styles{
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css" type="text/css" />
    <style>
        .report-body {
            padding: 0px 1.25rem !important;
        }

        .btn-sm {
            padding: .25rem .5rem;
            font-size: .875rem;
            line-height: 1.2;
            border-radius: 0.2rem;
        }
    </style>
}
    <div class="row">
        <div class="col-md-12">
            <div class="card mt-2 mb-2">
                <div class="card-body report-body">
                    <div class="row">
                        <div class="col-md-8">
                            <fieldset>
                                <legend>Search Billing File</legend>
                                <form asp-action="billing-report" autocomplete="off">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="fromDate" class="control-label"></label>
                                                <input asp-for="fromDate" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="toDate" class="control-label"></label>
                                                <input asp-for="toDate" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="destinationId" class="control-label">Reference No</label>
                                                <select class="form-control selectpicker" asp-for="destinationId" data-live-search="true" required>
                                                @foreach (var item in Model.destinations)
                                                {
                                                    <option value="@item.Id" data-tokens="@item.Id">@item.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-3 mt-4">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-search"></i> Search</button>
                                            <input type="hidden" asp-for="status" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </fieldset>
                    </div>
                    <div class="col-md-4">
                        <fieldset>
                            <legend>Download Billing Excel File</legend>
                            <form asp-action="export" asp-controller="Billing" onsubmit="return jQueryDataPost(this);" autocomplete="off">
                                <div class="row ">
                                    <div class="col-md-7">
                                        <div class="form-group">
                                            <label for="referenceNo" class="control-label">Reference Nos</label>
                                            <select class="form-control selectpicker" asp-for="referenceNo" data-live-search="true" required>
                                                @foreach (var item in Model.destinations)
                                                {
                                                    <option value="@item.Id" data-tokens="@item.Id">@item.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-5 mt-4">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-download"></i> Download</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="view-all-transaction">
    @if (Model.data.Count() > 0)
    {
        @await Html.PartialAsync("_tableBilling", Model.data)
    }
</div>
@section Scripts {
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" type="text/javascript"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" type="text/javascript"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js" type="text/javascript"></script>

    <script>
        $(function () {
            $('.selectpicker').selectpicker();
            $(".dropdown-toggle").addClass(" btn-sm");

            $("#report-table").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["excel"]
            }).buttons().container().appendTo('#report-table_wrapper .col-md-6:eq(0)');
        });

        const jQueryDataPost = form => {
            var url = form.action;
            var referenceNo = parseInt($("#referenceNo").val());
            if (referenceNo > 0) {
                window.open(url + '/' + referenceNo, "_blank");
            }
            return false;
        }
    </script>
        }
