@model Trans9.Models.ReportModel<Shipment>
@section Styles{
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css" type="text/css" />

    <style>
        .report-body {
            padding: 0px 1.25rem !important;
        }

        .btn-sm {
            padding: .25rem .5rem;
            font-size: .875rem;
            line-height: 1.2;
            border-radius: 0.2rem;
        }
    </style>
}
    <div class="row">
        <div class="col-md-12">
            <div class="card mt-2 mb-2">
                <div class="card-body report-body">
                    <form asp-action="eway-request" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="fromDate" class="control-label"></label>
                                    <input asp-for="fromDate" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="toDate" class="control-label"></label>
                                    <input asp-for="toDate" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="ids" class="control-label">Chassis No</label>
                                    <select class="form-control selectpicker" asp-for="ids" data-live-search="true" multiple="multiple">
                                    @foreach (var item in Model.ddl)
                                    {
                                        <option value="@item.Id" data-tokens="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <input type="submit" value="Search" class="btn btn-sm btn-block btn-primary mt-4" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div id="view-all-transaction">
    @if (Model.data.Count() > 0)
    {
        @await Html.PartialAsync("_tableEwayRequest", Model.data)
    }
</div>
@section Scripts {
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" type="text/javascript"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" type="text/javascript"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js" type="text/javascript"></script>
    <!-- Page specific script -->
    <script>
        $(function () {
            $('.selectpicker').selectpicker();
            $(".dropdown-toggle").addClass(" btn-sm");


            $("#report-table").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["excel"]
            }).buttons().container().appendTo('#report-table_wrapper .col-md-6:eq(0)');

            //table = $('#report-table').DataTable({
            //    'columnDefs': [{
            //        'targets': 0,
            //        'checkboxes': {
            //            'selectRow': true
            //        }
            //    }]
            //});
        });
    </script>
}
