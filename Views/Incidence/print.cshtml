@model Trans9.Models.IncidenceReport
@section Styles{
    <style type="text/css">
        .table {
            font-size: 19px !important;
        }

        .invoice {
            background-color: #fff;
            color: #000 !important;
            border: 1px #000 solid !important;
            border-radius: 18px !important;
        }

        .input-group {
            width: 30% !important;
        }

        .invoice-info {
            font-size: 19px;
        }

        .report-print {
            margin-left: 30px;
            margin-right: 30px;
        }

        h3 {
            margin: 0px !important;
        }

        .table td, .table th {
            padding: 2px 2px 2px 7px;
        }

        .sign {
            padding: 5px 5px 0px 16px;
            font-size: 19px;
        }

        .sign-panel {
            padding: 0px 20px;
        }

            .sign-panel > img {
                width: 150px !important;
            }

        hr {
            margin-top: 8px;
            margin-bottom: 10px;
            border: 0;
            border-top: 1px solid rgb(0 0 0 / 65%);
        }

        .card-header {
            border: none !important;
        }

        .vc-head th {
            color: black !important;
            background-color: #00669900 !important;
            font-weight: bold !important;
        }

        .cv-body span, .cv-body p {
            border-bottom: dotted #0000008f 1px !important;
            width: 70% !important;
            display: initial !important;
        }

        .containt {
            background-color: #fff;
            color: #000 !important;
        }
    </style>
}
    <section class="content report-print">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- Main content -->
                    <div class="invoice p-3 mb-3">
                        <div class="row">
                            <div class="col-12">
                                <div class="card-header" style="text-align: center;">
                                    <h1><strong>SHREE BALAJI LOGISTICS</strong></h1>
                                    <p style="font-size: 20px;">
                                        Flat No.4,A-04,Morisis Hsg. Society,Plot No. RH-23/1,G-Block,Sambhaji Nagar,<br />
                                        Chinchwad, Pune - 411019.Mob.: 8888825406,7262000062,9028070524 
                                        Email : shreebalajilohistics1@rediffmail.com</p>
                            </div>
                        </div>
                    </div>
                        <!-- title row -->
                        <div class="row">
                            <div class="col-12">
                                <div class="card-header" style="text-align: center;">
                                @if (Model.type.Equals("breakdown"))
                                {
                                    <h3><strong> Mechanical Defect Report </strong></h3>
                                }
                                else
                                {
                                    <h3><strong> Accident Report </strong></h3>
                                }
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-12">
                            <h4>
                                <small class="float-right">Date: @(DateTime.Now.ToString("dd/MM/yyyy"))</small>
                            </h4>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">
                        <!-- /.col -->
                        <div class="col-sm-12 invoice-col">
                            To
                            <address>
                                <strong>TATA MOTORS LTD</strong><br>
                                PIMPRI PUNE<br>
                                411018.
                            </address>
                        </div>
                    </div>
                    <hr />
                    <!-- Table row -->
                    @if (Model.type.Equals("breakdown"))
                    {
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-striped table-bordered">
                                    <tbody>
                                        <tr>
                                            <td width="40%">VC No as per Portal</td>
                                            <td width="60%">@Model.vcNo</td>
                                        </tr>
                                        <tr>
                                            <td>Destination of the Vehicle</td>
                                            <td>@Model.destination</td>
                                        </tr>
                                        <tr>
                                            <td>Model Description in Full as per Portal</td>
                                            <td>@Model.modelDesc</td>
                                        </tr>
                                          <tr>
                                            <td>Chassis Number</td>
                                            <td>@Model.chassisNo</td>
                                        </tr>
                                        <tr>
                                            <td>Nature of Problem (pl specify clearly)</td>
                                            <td>@Model.incidenceNature</td>
                                        </tr>
                                        <tr>
                                            <td>Exact break down location with State Name.</td>
                                            <td>@Model.incidencePlace</td>
                                        </tr>
                                        <tr>
                                            <td>Driver Name & No</td>
                                            <td>@Model.driverNameandNo</td>
                                        </tr>
                                        <tr>
                                            <td>Name of the Nearest Dealership/TASS</td>
                                            <td>@Model.nearestDealer</td>
                                        </tr>
                                        <tr>
                                            <td>Name of the Transporter</td>
                                            <td>@ViewBag.transporter</td>
                                        </tr>
                                        <tr>
                                            <td>Complaint No given by CAC</td>
                                            <td>@Model.complaintNo</td>
                                        </tr>
                                        <tr>
                                            <td>Date of Mechanical Defect/Acdt Occurred</td>
                                            <td>@Model.incidenceDate.Value.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                        <tr>
                                            <td>Date of Depositing of Vehicle with Dealer/TASS</td>
                                            <td>@Model.depositDate.Value.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                        <tr>
                                            <td>Transport Incharge Name & No</td>
                                            <td>@ViewBag.transInchargeInfo</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.col -->
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-striped table-bordered">
                                    <tbody>
                                        <tr>
                                            <td width="40%">Model Description in Full as per Portal</td>
                                            <td width="60%">@Model.modelDesc</td>
                                        </tr>
                                        <tr>
                                            <td>Temp. Registration No</td>
                                            <td>@Model.tempRegNo</td>
                                        </tr>
                                        <tr>
                                            <td>Chassis Number</td>
                                            <td>@Model.chassisNo</td>
                                        </tr>
                                        <tr>
                                            <td>Engine Number</td>
                                            <td>@Model.engineNo</td>
                                        </tr>
                                        <tr>
                                            <td>Invoice No & Date</td>
                                            <td>@Model.invoiceNo - @Model.invoiceDate.Value.ToString("dd/MM/yyyy") </td>
                                        </tr>
                                        <tr>
                                            <td>Destination / Rso </td>
                                            <td>@Model.destination</td>
                                        </tr>
                                        <tr>
                                            <td>Driving License No</td>
                                            <td>@Model.dlNo</td>
                                        </tr>
                                        <tr>
                                            <td>Driver Name & No</td>
                                            <td>@Model.driverNameandNo</td>
                                        </tr>
                                        <tr>
                                            <td>Date of Accident</td>
                                            <td>@Model.incidenceDate.Value.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                        <tr>
                                            <td>Place of Accident</td>
                                            <td>@Model.incidencePlace</td>
                                        </tr>
                                        <tr>
                                            <td>Date of Depositing of Vehicle with Dealer/TASS</td>
                                            <td>@Model.depositDate.Value.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                        <tr>
                                            <td>Details of Damages</td>
                                            <td>@Model.incidenceNature</td>
                                        </tr>
                                        <tr>
                                            <td>Immediate Action Taken</td>
                                            <td>@Model.immediateAction</td>
                                        </tr>
                                        <tr>
                                            <td>Police Panchanama Held </td>
                                            <td>@Model.panchnamaHeld</td>
                                        </tr>
                                        <tr>
                                            <td>Driver Released ?</td>
                                            <td>@Model.driverReleased</td>
                                        </tr>
                                        <tr>
                                            <td>Third Party Involved ?</td>
                                            <td>@Model.thirdPartyInvolved</td>
                                        </tr>
                                        <tr>
                                            <td>Chassis Handed over to  Dealer</td>
                                            <td>@Model.vcHandedOver</td>
                                        </tr>
                                        <tr>

                                            <td>Police Station Name</td>
                                            <td>@Model.pcStationName</td>
                                        </tr>
                                        <tr>
                                            <td>Chassis Released ?</td>
                                            <td>@Model.ChassisReleased</td>
                                        </tr>
                                        <tr>
                                            <td>Insurance Survey Done ?</td>
                                            <td>@Model.insSurveyDone</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.col -->
                        </div>
                    }
                    <hr />
                    <div class="row">
                        <div class="col-12 sign">
                            <div class="sign-panel">
                                <img src="../../docs/sbl-stamp.png" />
                            </div>
                            <span> Transporter Seal & Sign</span>
                        </div>
                    </div>
                    <!-- /.row -->
                    <!-- this row will not appear when printing -->
                    <div class="row no-print">
                        <div class="col-12">
                            <button onclick="printReport();" class="btn btn-primary float-right"><i class="fas fa-print"></i> Print</button>
                            @*<button type="button" class="btn btn-primary float-right" style="margin-right: 5px;">
                                <i class="fas fa-download"></i> Generate PDF
                            </button>*@
                        </div>
                    </div>
                </div>
                <!-- /.invoice -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

@section Scripts {
    <script>
        function printReport() {
            window.print();
        }
    </script>
}