@model IEnumerable<Trans9.Models.Shipment>
<div class="card">
    <div class="table-content">
        <div class="card-body table-responsive p-0" style="height: 450px;">
            <table class="table table-head-fixed text-nowrap table-bordered table-hover">
                <thead class="header">
                    <tr>
                        <th>ACTION</th>
                        <th>
                            #
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.shipmentNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.shipmentDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.location)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.vcNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.modelDesc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.plantCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.chasisNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.invoiceNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.invoiceDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.status)
                        </th>                       
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        int i = 1;
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (ViewBag.PageTitle == "INCIDENCE")
                                    {
                                        <a onclick="showInPopup('@Url.Action("Breakdown","Incidence",new { shipmentId=item.shipmentId},Context.Request.Scheme)', 'Break Down')" class="text-warning"><img src="../../css/breakdown.png" width="20" /></a>
                                        <a onclick="showInPopup('@Url.Action("Accident","Incidence",new { shipmentId=item.shipmentId},Context.Request.Scheme)', 'Accident')" class="text-danger d-inline"><img src="../../css/accident.png" width="25" /></a>

                                        @*<a onclick="showInPopup('@Url.Action("Breakdown","Incidence",new { shipmentId=item.shipmentId},Context.Request.Scheme)', 'Break Down')" class="btn btn-info btn-sm"><span class="fa fa-breakdown"></span></a>
                            <a onclick="showInPopup('@Url.Action("Accident","Incidence",new { shipmentId=item.shipmentId},Context.Request.Scheme)', 'Accident')" class="btn btn-info btn-sm d-inline"><span class="fa fa-accident"></span></a>*@
                                    }
                                    else
                                    {
                                        <a onclick="showInPopup('@Url.Action("Authority","Incidence",new { shipmentId=item.shipmentId},Context.Request.Scheme)', 'Authority')" class="text-primary d-inline"><span class="fa fa-pencil-alt"></span></a>
                                    }
                                </td>
                                <td>
                                    @(
                                        i++
                                        )
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.shipmentNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.shipmentDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.location)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.vcNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.modelDesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.plantCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.chasisNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.invoiceNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.invoiceDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>                              
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>