@model Trans9.Models.PayRequest

@section Styles {
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css" type="text/css" />
    <link rel="stylesheet" href="../../plugins/select2/css/select2.min.css">
    <style>
        .table {
            font-size: 11px;
        }
        
        .report-body {
            padding: 0px 1.25rem !important;
        }

        .dropdown-toggle {
            height: 26px !important;
            padding-top: 0px !important;
            padding-bottom: 2px !important;
        }
        .btn-sm {
            padding: .25rem .5rem;
            font-size: .875rem;
            line-height: 1.2;
            border-radius: 0.2rem;
        }
    </style>
}
<div class="row">
    <div class="col-md-12">
        <div class="card mt-2 mb-2">
            <div class="card-body report-body">
                <form asp-action="payslip-index" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="fromDate" class="control-label"></label>
                                <input asp-for="fromDate" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="toDate" class="control-label"></label>
                                <input asp-for="toDate" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="employeeId" class="control-label"></label>
                                <select class="form-control selectpicker" asp-for="employeeId" data-live-search="true" required>
                                    @foreach (var item in Model.ddl)
                                    {
                                        <option value="@item.Id" data-tokens="@item.Id">@item.Name</option>
                                    }
                                </select>
                                <input asp-for="employeeId" style="display:none;" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3 mt-4">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-search"></i> Search</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div id="view-all-transaction">
    @if (Model.list.Count() > 0)
    {
        @await Html.PartialAsync("_ViewAllPayslip", Model.list)
    }
</div>
@section Scripts {
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" type="text/javascript"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" type="text/javascript"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js" type="text/javascript"></script>

    <script src="../../plugins/select2/js/select2.min.js" ></script>
    <script src="../../js/app.js"></script>
    <script src="../../js/site.js"></script>

    <script type="text/javascript">
        $(function () {
            $('.selectpicker').selectpicker();
            $(".dropdown-toggle").addClass(" btn-sm");

            $("#report-table").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["excel"]
            }).buttons().container().appendTo('#report-table_wrapper .col-md-6:eq(0)');
        });

        const jQueryDataPost = form => {
            var url = form.action;
            var referenceNo = parseInt($("#referenceNo").val());
            if (referenceNo > 0) {
                window.open(url + '/' + referenceNo, "_blank");
            }
            return false;
        }
    </script>
}