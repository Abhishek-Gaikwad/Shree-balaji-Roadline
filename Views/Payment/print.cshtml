@model Trans9.Models.Receipt
@{
    int i = 1;
}
@section Styles{
    <style type="text/css">
        .table {
            font-size: 19px !important;
        }

        .invoice {
            background-color: #fff;
            color: #000 !important;
            border: 1px #000 solid !important;
            border-radius: 18px !important;
        }
        .input-group {
            width: 30% !important;
        }
        .invoice-info {
            font-size: 19px;
        }

        .report-print {
            margin-left: 30px;
            margin-right: 30px;
        }
        h3{
            margin:0px !important;
        }
        .table td, .table th {
            padding: 2px 2px 2px 7px;
        }

        .sign {
            padding: 5px 5px 0px 16px;
            font-size: 19px;
        }

        .sign-panel {
            padding: 0px 20px;
        }

        .sign-panel > img {
            width: 150px !important;
        }

        hr {
            margin-top: 8px;
            margin-bottom: 10px;
            border: 0;
            border-top: 1px solid rgb(0 0 0 / 65%);
        }
        .card-header{
            border:none !important;
        }
        .vc-head th{
           color: black !important;
           background-color: #00669900 !important;
           font-weight: bold !important;
        }
        .cv-body span,.cv-body p{
            border-bottom: dotted #0000008f 1px !important;
            width: 70% !important;
            display: initial !important;
        }
        .containt{
            background-color: #fff;
            color: #000 !important;
        }
    </style>
}
    <section class="content report-print">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- Main content -->
                    <div class="containt p-1">
                        <div class="invoice p-3 mb-3">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="">
                                        <div><h4> CASH/PAYMENT RECEIPT </h4></div>
                                        <div class="vc-head">
                                            <table class="table">
                                                <tr>
                                                    <th>Voucher No</th>
                                                    <td>: @Model.receiptNo</td>
                                                </tr>
                                                <tr>
                                                    <th>Date</th>
                                                    <td>: @Model.voucherDate.ToString("dd-MM-yyyy")</td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-8">
                                    <div class="" style="text-align: center;">
                                        <h1><strong>SHREE BALAJI LOGISTICS</strong></h1>
                                        <p style="font-size: 20px;">
                                            Flat No.4, A-04, Morisis Hsg. Society, Plot No.RH-23/1, G-Block,<br />Sambhaji Nagar,Chinchwad, Pune - 411019.<br /> Mob.: 8888825406,7262000062,9028070524<br />Email : shreebalajilohistics1@rediffmail.com
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <!-- Table row -->
                            <div class="row mb-3">
                                <div class="col-12 table-responsive cv-body">
                                    <div class="mb-1 table">Paid To Mr./Mrs/Ms.: <p>@Model.paidTo</p></div>
                                    <div class="mb-1 table">The sum of rupees (in words): <p>@Model.amountInWord</p> </div>
                                    <div class="mb-1 table">Payment against: <span>@Model.remark</span> Through: <span>@Model.payMode</span> </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-6">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-rupee-sign nav-icon"></i></span>
                                        </div>
                                        <span class="form-control table"><strong>@Model.amount/-</strong></span>
                                    </div>                                    
                                </div>
                                <div class="col-6 sign" style="text-align: center;">
                                    <div class="sign-panel">
                                        <img src="../../docs/sbl-stamp.png" />
                                    </div>
                                    <span> Seal & Sign</span>
                                </div>
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- /.invoice -->
                        <!-- this row will not appear when printing -->
                        <div class="row no-print">
                            <div class="col-12">
                                <button onclick="printReport();" class="btn btn-primary float-right"><i class="fas fa-print"></i> Print</button>
                            </div>
                        </div>
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>

    @section Scripts {
    <script>
        function printReport() {
            window.print();
        }
    </script>
}