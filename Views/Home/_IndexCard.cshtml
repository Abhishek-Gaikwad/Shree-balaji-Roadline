<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body p-2">
                @* <iframe title="sbldashboard" width="100%" height="600" src="@ViewBag.reportUrl" frameborder="0" allowFullScreen="true"></iframe> *@
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">@ViewBag.PageTitle</h1>
                    </div>

                  
    <div class="row">
        <div class="col-md-12">
            <div class="card mt-2 mb-2">
                <div class="card-body report-body">
                                    <form asp-action="Dashboard-report" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row">
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <label asp-for="fromDate" class="control-label"></label>
                                                        <input asp-for="fromDate" class="form-control" />
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <label asp-for="toDate" class="control-label"></label>
                                                        <input asp-for="toDate" class="form-control" />
                                                    </div>
                                                </div>

                                                @*<button type="submit" class="btn btn-primary md-5 mx-3">Get Data</button>*@
                                        <div class="col-md-1 mt-4">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-search"></i></button>
                                        </div>
                                        </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>

                    <!-- Content Row -->
                    <div class="row col-auto">

                        <!-- Card One -->
                        <div class="col-xl-4 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body" @* onclick="CardOne()" *@>
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                IN PLANT 
                                            </div>
                                            <div class="h5 my-2 mb-0 font-weight-bold text-gray-800">
                                                <span class="mx-3 text-xl" id="vehAlotCount">
                                                    @{
                                                        if (ViewBag.allocMonthCount != null)
                                                        {
                                                            @ViewBag.allocMonthCount
                                                            ;
                                                        }
                                                        if (ViewBag.allocatedCount_ != null)
                                                        {
                                                            @ViewBag.allocatedCount_
                                                            ;
                                                        }
                                                    }
                                                </span>
                                                <hr>
                                                <div class="col-auto my-md-0">
                                                    <i class="fas fa-bus text-secondary"></i>
                                                    <span class="text-xs text-secondary"> Dealer & Customer Vehicles</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Card Two -->
                        <div class="col-xl-4 col-md-6 mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body" @* onclick="CardTwo()" *@>
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                IN YARD 
                                            </div>
                                            <div class="h5 my-2 mb-0 font-weight-bold text-gray-800">
                                                <span class="mx-3 text-xl" id="vehDispCount">
