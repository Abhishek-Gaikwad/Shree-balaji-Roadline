<script>
    // Get the 'startDate' and 'endDate' input elements by their IDs
    var startDateInput = document.getElementById("startDate");
    var endDateInput = document.getElementById("endDate");

    // Access the 'stDate' and 'endDate' values from ViewBag and convert them to JavaScript Date objects
    var stDate = new Date('@ViewBag.StDate'); // Convert to JavaScript Date object
    var endDate = new Date('@ViewBag.EndDate'); // Convert to JavaScript Date object

    // Add one day to 'stDate' and 'endDate'
    stDate.setDate(stDate.getDate() + 1);
    endDate.setDate(endDate.getDate() + 1);

    // Set the 'startDateInput' and 'endDateInput' values to 'stDate' and 'endDate'
    startDateInput.valueAsDate = stDate;
    endDateInput.valueAsDate = endDate;
</script>
