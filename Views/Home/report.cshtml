@section Styles{
    <style type="text/css">
        .table{
            font-size: 18px;
        }
        .invoice {
            background-color: #fff;
            color: #000 !important;
        }

        .invoice-info{
            font-size:20px;
        }
        .report-print {
            margin-left: 30px;
            margin-right: 30px;
        }

        .table td, .table th {
            padding: 2px 2px 2px 7px;
        }

        .sign {
            padding: 5px 5px 0px 16px;
            font-size: 18px;
        }

        .sign-panel {
            padding: 50px;
        }

        hr {
            margin-top: 0px;
            margin-bottom: 10px;
            border: 0;
            border-top: 1px solid rgb(0 0 0 / 65%);
        }
    </style>
}
<section class="content report-print">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Main content -->
                <div class="invoice p-3 mb-3">
                    <!-- title row -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card-header" style="text-align: center;">
                                <h3><strong> Mechanical Defect Report </strong></h3>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-12">
                            <h4>
                                <small class="float-right">Date: 2/10/2014</small>
                            </h4>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">
                        <!-- /.col -->
                        <div class="col-sm-12 invoice-col">
                            To
                            <address>
                                <strong>TATA MOTORS LTD</strong><br>
                                PIMPRI PUNE<br>
                                411018.
                            </address>
                        </div>
                    </div>
                    <hr />
                    <!-- Table row -->
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-striped table-bordered">
                                <tbody>
                                    <tr>
                                        <td width="40%">VC No as per Portal</td>
                                        <td width="60%"></td>
                                    </tr>
                                    <tr>
                                        <td>Destination of the Vehicle</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Model Description in Full as per Portal</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Nature of Problem (pl specify clearly)</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Exact break down location with State Name.</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Driver Name & No</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Name of the Nearest Dealership/TASS</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Name of the Transporter</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Complaint No given by CAC</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Date of Mechanical Defect/Acdt Occurred</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Date of Depositing of Vehicle with Dealer/TASS</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Transport Incharge Name & No</td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.col -->
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-12 sign">
                            <div class="sign-panel">
                                <img src="../../docs/sbl-stamp.png" />
                            </div>
                            <span> Transporter Seal & Sign</span>
                        </div>
                    </div>
                    <!-- /.row -->
                    <!-- this row will not appear when printing -->
                    <div class="row no-print">
                        <div class="col-12">
                            <button onclick="printReport();" class="btn btn-default"><i class="fas fa-print"></i> Print</button>
                            <button type="button" class="btn btn-primary float-right" style="margin-right: 5px;">
                                <i class="fas fa-download"></i> Generate PDF
                            </button>
                        </div>
                    </div>
                </div>
                <!-- /.invoice -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

@section Scripts {
    <script>
        function printReport() {
            window.print();
        }
    </script>
}