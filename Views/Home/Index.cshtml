<script>
    // Get the current date
    var currentDate = new Date();

    // Set the default value for the endDate input field to the current date
    var endDate = document.getElementById("endDate");

    if (endDate) { 
        endDate.valueAsDate = currentDate;
    }

    // Set the default value for the startDate input field to the starting date of the current month
